{
  "name": "lurelands-bridge",
  "version": "1.0.0",
  "description": "WebSocket bridge between Flutter clients and SpacetimeDB",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "generate": "spacetime generate --lang typescript --out-dir src/generated --project-path ../spacetime-server"
  },
  "dependencies": {
    "elysia": "^1.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "spacetimedb": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
